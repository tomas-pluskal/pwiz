project
    : requirements 
        <include>ramp # look in local ramp directory for ramp.h
        <toolset>gcc:<define>_LARGEFILE_SOURCE # ramp.h wants this
        <toolset>darwin:<define>_LARGEFILE_SOURCE # ramp.h wants this
        <toolset>gcc:<cxxflags>-fno-strict-aliasing
    ;


lib pwiz_data_msdata 
    :   cv.cpp # generated by cvgen
        BinaryDataEncoder.cpp
        CVParam.cpp 
        CVTranslator.cpp
        DefaultReaderList.cpp
        Diff.cpp
        IO.cpp
        LegacyAdapter.cpp
        MSData.cpp 
        MSDataFile.cpp 
        Serializer_mzML.cpp
        Serializer_mzXML.cpp
        SpectrumIterator.cpp
        SpectrumList_mzML.cpp
        SpectrumList_mzXML.cpp
        RAMPAdapter.cpp
        Reader.cpp
        References.cpp
        ../../utility/misc
        ../../utility/minimxml
    ;


# -fno-strict-aliasing necessary to avoid warnings from gcc 4.1+
#  with regards to float <-> dword conversions during en/decoding 
# gcc 4.1.2 regression bug: 
# -O2 without -fno-strict-aliasing causes miscompilation in MSRunPeaksEncoder.cpp 


#
# cvgen is used to generate cv.hpp and cv.cpp
#


exe cvgen : obo.cpp cvgen.cpp ../..//boost_regex ../..//boost_filesystem 
    : <toolset>darwin:<variant>debug ;



actions do_cvgen
{
    $(>)
}

# we currently call cvgen twice
make cv.cpp : cvgen psi-ms.obo : do_cvgen ;
make cv.hpp : cvgen psi-ms.obo : do_cvgen ;



install generated_files : cv.hpp cv.cpp : <location>. ;
explicit generated_files ;


#
# unit tests (ordered by dependency)
#


unit-test obotest : obotest.cpp obo.cpp ../..//boost_regex ;
unit-test cvtest : cvtest.cpp pwiz_data_msdata ; # cv.cpp ;
unit-test CVTranslatorTest : CVTranslatorTest.cpp pwiz_data_msdata ; # CVTranslator.cpp cv.cpp ;
unit-test CVParamTest : CVParamTest.cpp pwiz_data_msdata ; # CVParam.cpp cv.cpp ;
unit-test MSDataTest : MSDataTest.cpp pwiz_data_msdata ; # MSData.cpp cv.cpp ;
unit-test LegacyAdapterTest : LegacyAdapterTest.cpp pwiz_data_msdata ; # LegacyAdapter.cpp CVTranslator.cpp MSData.cpp cv.cpp ;
unit-test SpectrumIteratorTest : SpectrumIteratorTest.cpp pwiz_data_msdata ; # SpectrumIterator.cpp MSData.cpp cv.cpp ../util ;
unit-test BinaryDataEncoderTest : BinaryDataEncoderTest.cpp pwiz_data_msdata ; # BinaryDataEncoder.cpp ../util ;
unit-test DiffTest : DiffTest.cpp pwiz_data_msdata ; # Diff.cpp MSData.cpp cv.cpp ;
unit-test ReferencesTest : ReferencesTest.cpp pwiz_data_msdata ; # References.cpp MSData.cpp cv.cpp ;
unit-test IOTest : IOTest.cpp pwiz_data_msdata ; # IO.cpp MSData.cpp Diff.cpp cv.cpp References.cpp BinaryDataEncoder.cpp ../minimxml ../util ;
unit-test SpectrumList_mzML_Test : SpectrumList_mzML_Test.cpp examples.cpp pwiz_data_msdata ; # SpectrumList_mzML.cpp examples.cpp Serializer_mzML.cpp  References.cpp IO.cpp BinaryDataEncoder.cpp MSData.cpp cv.cpp ../minimxml ../util ;
unit-test Serializer_mzML_Test : Serializer_mzML_Test.cpp examples.cpp pwiz_data_msdata ; # Serializer_mzML.cpp examples.cpp SpectrumList_mzML.cpp IO.cpp References.cpp Diff.cpp BinaryDataEncoder.cpp MSData.cpp cv.cpp ../util ../minimxml ;
unit-test SpectrumList_mzXML_Test : SpectrumList_mzXML_Test.cpp examples.cpp pwiz_data_msdata ; # SpectrumList_mzXML.cpp examples.cpp Serializer_mzXML.cpp References.cpp BinaryDataEncoder.cpp LegacyAdapter.cpp CVTranslator.cpp MSData.cpp cv.cpp ../util ../minimxml ;
unit-test Serializer_mzXML_Test : Serializer_mzXML_Test.cpp examples.cpp pwiz_data_msdata ; # Serializer_mzXML.cpp examples.cpp SpectrumList_mzXML.cpp Serializer_mzML.cpp SpectrumList_mzML.cpp IO.cpp References.cpp Diff.cpp BinaryDataEncoder.cpp LegacyAdapter.cpp CVTranslator.cpp MSData.cpp cv.cpp ../util ../minimxml ;
unit-test MSDataFileTest : MSDataFileTest.cpp examples.cpp pwiz_data_msdata ;
unit-test RAMPAdapterTest : RAMPAdapterTest.cpp examples.cpp pwiz_data_msdata ;
unit-test ReaderTest : ReaderTest.cpp pwiz_data_msdata ;


#
# installation
#


install stage_libs 
    : ../util//pwiz_util
      ../minimxml//pwiz_minimxml
      pwiz_msdata
    : <install-type>LIB
      <toolset>msvc,<variant>release:<location>../../stage/lib-msvc-release
      <toolset>msvc,<variant>debug:<location>../../stage/lib-msvc-debug
      <toolset>gcc,<variant>release:<location>../../stage/lib-gcc-release
      <toolset>gcc,<variant>debug:<location>../../stage/lib-gcc-debug
    ;


install stage_headers
    : [ glob ../msdata/*.hpp ] 
      [ glob ../util/*.hpp ]
      [ glob ../minimxml/*.hpp ]
    : <location>../../stage/pwiz
      <install-source-root>..
    ;


alias stage : stage_libs stage_headers ;

explicit stage_libs ;
explicit stage_headers ;
explicit stage ;


