project
    : requirements
        <toolset>gcc:<cxxflags>-fno-strict-aliasing
        # hacks to allow building with <warnings>all with MSVC and boost
        <toolset>msvc:<cxxflags>/wd4702 # warning: unreachable code # (boost/numeric/ublas/lu.hpp)
        <toolset>msvc,<link>shared:<define>PWIZ_DYN_LINK
;


# -fno-strict-aliasing necessary to avoid warnings from gcc 4.1+
#  with regards to float <-> dword conversions during en/decoding 
# gcc 4.1.2 regression bug: 
# -O2 without -fno-strict-aliasing causes miscompilation in MSRunPeaksEncoder.cpp 


lib pwiz_data_mzid_version : Version.cpp : <link>static <conditional>@static-with-fpic ;


lib pwiz_data_mzid 
    :   # sources
        Diff.cpp
        MzIdentML.cpp
        MzIdentMLFile.cpp
        Reader.cpp
        DefaultReaderList.cpp
        IO.cpp
        Serializer_mzid.cpp
        Pep2MzIdent.cpp
        References.cpp
        KwCVMap.cpp
    : # requirements
        <library>pwiz_data_mzid_version
        <library>../common//pwiz_data_common
        <library>../misc//pwiz_data_misc
        <library>../../utility/chemistry//pwiz_utility_chemistry
        <library>/ext/boost//iostreams/<boost-iostreams-zlib>on
        <library>/ext/boost//regex
    : # default-build
    : # usage-requirements
        <library>pwiz_data_mzid_version
        <library>../common//pwiz_data_common
        <library>../misc//pwiz_data_misc
        <library>../../utility/chemistry//pwiz_utility_chemistry
        <library>/ext/boost//iostreams/<boost-iostreams-zlib>on
        <library>/ext/boost//regex
    ;


lib pwiz_data_mzid_examples
    :   examples.cpp
    :   <library>pwiz_data_mzid
    :
    :	<library>pwiz_data_mzid
    ;


#
# testing tools
#

exe ExtendedReaderTest
    : ExtendedReadTest.cpp
      pwiz_data_mzid
    : <include>../..
    ;
explicit ExtendedReaderTest ;


#
# unit tests (ordered by dependency)
#

unit-test MzIdentMLTest : MzIdentMLTest.cpp pwiz_data_mzid pwiz_data_mzid_examples ; 
unit-test DiffTest : DiffTest.cpp pwiz_data_mzid pwiz_data_mzid_examples ;
unit-test ReferencesTest : ReferencesTest.cpp pwiz_data_mzid ;
unit-test IOTest : IOTest.cpp pwiz_data_mzid pwiz_data_mzid_examples ;
unit-test Serializer_mzid : Serializer_mzid_Test.cpp pwiz_data_mzid pwiz_data_mzid_examples ;
unit-test KwCVMapTest : KwCVMapTest.cpp pwiz_data_mzid pwiz_data_mzid_examples ;
