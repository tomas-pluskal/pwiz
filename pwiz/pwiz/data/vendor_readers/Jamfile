project
    : requirements 
        <include>ramp # look in local ramp directory for ramp.h
        <toolset>gcc:<define>_LARGEFILE_SOURCE # ramp.h wants this
        <toolset>darwin:<define>_LARGEFILE_SOURCE # ramp.h wants this
        <toolset>gcc:<cxxflags>-fno-strict-aliasing
    ;



lib pwiz_data_vendor_readers
    :   ExtendedReaderList.cpp 
        [ glob *_Thermo*.cpp ]
        ../../utility/vendor_api/thermo
        ../msdata//pwiz_data_msdata
    ;


#
# unit tests (ordered by dependency)
#



# special run target for Reader_Thermo_Test, which needs external data 
# use --preserve-test-targets to prevent bjam from deleting the executable
run Reader_Thermo_Test.cpp pwiz_data_vendor_readers 
    : # args
    : Reader_Thermo_Test.RAW # input-files
    : # requirements
    : Reader_Thermo_Test # target name
    : # default-build
    ;


