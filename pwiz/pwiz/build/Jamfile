# level 0 libraries
#build-project ../util ;
#build-project ../math ;
#build-project ../minimxml ;

build-project ../utility ;

# level 1 libraries
#build-project ../rawfile ;
#build-project ../data ;
#build-project ../msdata ;

# level 2 libraries
#build-project ../analysis ;
#build-project ../peaks ;
#build-project ../proteome ;

# tools
#build-project ../tools ;


install exe
    : ../tools
    : <install-type>EXE
      <toolset>gcc,<variant>release:<location>../../build/gcc-release
      <toolset>gcc,<variant>debug:<location>../../build/gcc-debug
      <toolset>msvc,<variant>release:<location>../../build/msvc-release
      <toolset>msvc,<variant>debug:<location>../../build/msvc-debug
    ;


install lib 
    : ../tools
    : <install-type>LIB
      <install-dependencies>on
      <toolset>gcc,<variant>release:<location>../../build/gcc-release
      <toolset>gcc,<variant>debug:<location>../../build/gcc-debug
      <toolset>msvc,<variant>release:<location>../../build/msvc-release
      <toolset>msvc,<variant>debug:<location>../../build/msvc-debug
    ;


